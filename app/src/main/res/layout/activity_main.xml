<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalya.simcard1.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/abc"
        android:id="@+id/imageView"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:text="learning zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="57dp"
                android:id="@+id/textView2"
                android:textColor="#FFFFFF"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="57dp" />

            <RelativeLayout
                android:id="@+id/CLanguage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="29dp"
                android:layout_below="@+id/textView2"
                android:background="@color/White"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignLeft="@+id/textView2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/ImageGk"
                    android:src="@drawable/c"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="C Programming"
                    android:layout_centerInParent="true"
                    android:textColor="#663300"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CPlusplus"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@+id/CLanguage"
                android:layout_toEndOf="@+id/CLanguage"
                android:background="@color/White"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/CLanguage"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/currentaffairs"
                    android:src="@drawable/c3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="C++ Programming"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#663300"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="29dp"
                android:background="@color/White"
                android:layout_below="@+id/CLanguage"
                android:id="@+id/JAVA"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignLeft="@+id/textView2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/Java"
                    android:src="@drawable/java"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Java"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:textColor="#663300"/>
            </RelativeLayout>
            <TextView
                android:text="practise zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JAVA"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="57dp"
                android:id="@+id/textView3"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="57dp" />
            <RelativeLayout
                android:id="@+id/QuizeBox"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="29dp"
                android:background="@color/White"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignLeft="@+id/textView2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/Quize"
                    android:src="@drawable/quiz1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Quize"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:textColor="#663300"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalya.quiz.FinalResult">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/abc"
        android:id="@+id/imageView"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/Questionmarksimage"
            android:src="@drawable/cba"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Questionmarksimage"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Quiz Summary"
            android:id="@+id/QuizSummary"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/QuizSummary"
            android:layout_marginTop="50dp"
            android:text="Total Questions"
            android:id="@+id/TotalQuestions"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TotalQuestions"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="25dp"
            android:id="@+id/Numberofquestions"
            android:text="20"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Numberofquestions"
            android:layout_marginTop="50dp"
            android:text="Total Attempted"
            android:id="@+id/TotalAttempted"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TotalAttempted"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="25dp"
            android:text="20"
            android:id="@+id/NumberofAttempted"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/NumberofAttempted"
            android:layout_marginTop="50dp"
            android:text="Answered Right"
            android:id="@+id/AnsweredRight"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/AnsweredRight"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="25dp"
            android:text="20"
            android:id="@+id/AnsweredRightQuestions"
            android:textColor="#FFFFFF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/LaunchNewQuiz"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/AnsweredRightQuestions"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Launch New Quiz"
                android:fontFamily="serif" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/Cancel"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/LaunchNewQuiz"/>
    </RelativeLayout>

</RelativeLayout>
